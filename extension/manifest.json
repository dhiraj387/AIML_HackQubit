{
  "manifest_version": 3,
  "name": "Hate Speech Detector",
  "version": "1.0",
  "description": "Detects hate or offensive text on any webpage using AI.",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["http://127.0.0.1:5000/*", "http://localhost:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
